<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Privilege (new in Odoo 19) -->
        <record id="privilege_financing_access" model="res.groups.privilege">
            <field name="name">Motorcycle Financing</field>
            <!-- You can keep it hidden OR change to another category later -->
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <!-- Groups -->
        <record id="group_financing_user" model="res.groups">
            <field name="name">Financing User</field>
            <field name="privilege_id" ref="motorcycle_financing.privilege_financing_access"/>
        </record>

        <record id="group_financing_manager" model="res.groups">
            <field name="name">Financing Manager</field>
            <field name="privilege_id" ref="motorcycle_financing.privilege_financing_access"/>
            <field name="implied_ids" eval="[(4, ref('motorcycle_financing.group_financing_user'))]"/>
        </record>

    </data>
</odoo>
